<h1>Editing resume</h1>

<% form_for(@resume) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :skills %><br />
    <%= f.text_area :skills, :class =>"mceEditor" %>
  </p>
  <p>
    <%= f.label :experience %><br />
    <%= f.text_area :experience, :class =>"mceEditor" %>
  </p>
  <p>
    <%= f.label :summary %><br />
    <%= f.text_area :summary, :class =>"mceEditor" %>
  </p>
  <p>
    <%= f.label :cv %><br />
    <%= f.text_area :cv, :class =>"mceEditor" %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @resume %> |
<%= link_to 'Back', resumes_path %>
