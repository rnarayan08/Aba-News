<h1>Listing resumes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Skills</th>
    <th>Experience</th>
    <th>Summary</th>
    <th>Cv</th>
  </tr>

<% for resume in @resumes %>
  <tr>
    <td><%=h resume.title %></td>
    <td><%=h resume.skills %></td>
    <td><%=h resume.experience %></td>
    <td><%=h resume.summary %></td>
    <td><%=h resume.cv %></td>
    <td><%= link_to 'Show', resume %></td>
    <td><%= link_to 'Edit', edit_resume_path(resume) %></td>
    <td><%= link_to 'Destroy', resume, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New resume', new_resume_path %>
