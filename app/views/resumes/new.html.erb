<h1>New resume</h1>

<% form_for(@resume) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br /> 
    <%= f.text_field :title %>  <%=check_box "bold","bold"%>Bold<%=check_box "italics","italics"%>Italics <%=check_box "underline","underline"%>Underline
  </p>
  <p>
    <%= f.label :skills %><br />
    <%= f.text_area :skills, :class =>"mceEditor" %>
  </p>
  <p>
    <%= f.label :experience %><br />
    <%= f.text_area :experience, :class =>"mceEditor" %>
  </p>
  <p>
    <%= f.label :summary %><br />
    <%= f.text_area :summary, :class =>"mceEditor" %>
  </p>
  <p>
    <%= f.label :cv %><br />
    <%= f.text_area :cv, :class =>"mceEditor"%>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', resumes_path %>
